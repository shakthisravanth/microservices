server:
  port: 8080

eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka

spring:
  application:
     name: api-gateway
  cloud:
    gateway:
      mvc:
        routes: # Define a route to services
        - id: customer-service # unique id for customerservice
          uri: lb://customer-service  #Load balanced URI using Eureka server
          predicates:
          - path=/customers # mapping